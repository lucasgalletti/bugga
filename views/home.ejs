
<%- include('./partials/head', {title: 'Home'}) %>


<%- include('./partials/headerNavbar') %>

    <main>

      <div class="banner">

<%- include('./partials/slider')%>

        <!-- <img src="/images/category-books-banner_1920x550_210401.jpeg" alt="banner"> -->



      </div>
      <p>Novedades de la Semana</p>
      <section>

        <% novedad.forEach((nov) => { %>
        <article>
          <form action="/products/carrito" method="post">
          <a href="/products/<%=nov.id%>" name="prodID">
            <img src="/images/<%=nov.image%>" alt="mundo" name="prodImage">
            <div class="articulo">
              <div class="autor-favorito">
                <h3><%=nov.name%></h3>
                <i class="fas fa-heart"></i>
              </div>
              <div class="precio-descuento">
                <p class="precio" name="prodPrice">$<%=toThousand(nov.price)%>
                  <a href="/products/<%=nov.id%>"><i class="fas fa-info-circle info"></i></a>
                </p>
                <button type="submit" class="comprar">Comprar</button>
              </div>
            </div>
          </a>
         </form>
        </article>
        <% }) %>
      </section>

      <p>¡Los más elegidos en Bugga!</p>
      <section>
      <% elegidos.forEach((elegido) => { %>
        <article>
          <form action="/products/carrito" method="post">
          <a href="/products/<%=elegido.id%>" name="prodID">
            <img src="/images/<%=elegido.image%>" alt="mundo" name="prodImage">
            <div class="articulo">
              <div class="autor-favorito">
                <h3><%=elegido.name%></h3>
                <i class="fas fa-heart"></i>
              </div>
              <div class="precio-descuento">
                <p class="precio" name="prodPrice">$<%=toThousand(elegido.price)%>
                  <a href="/products/<%=elegido.id%>"><i class="fas fa-info-circle info"></i></a>
                </p>
                <button type="submit" class="comprar">Comprar</button>
              </div>
            </div>
          </a>
         </form>
        </article>
        <% }) %>
      </section>

    </main>
<%- include('./partials/footer') %>
