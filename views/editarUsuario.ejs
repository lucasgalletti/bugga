<%- include('./partials/head', {title: 'Editando Usuario'}) %>


<%- include('./partials/headerNavbar') %>

<main>
    <p class="editando">Editando usuario: <%= user.name %> </p>
    <div class="eliminandoForm">

        <form action="/user/<%= user.id %>?_method=put" id=from class="altaProd" method="POST"  enctype="multipart/form-data">
            <img src="/images/profileImg/<%= user.image %>" alt="" style = "width: 100px; border-radius: 100px; margin: 5px auto; border: 2px solid #735290">
            <label for="title">Nombre del Usuario</label>
            <input type="text" id="name" name="name" required minlength="2" value="<%= user.name %>">
            <label for="title">email</label>
            <input type="email" id="mail" placeholder="E-mail" name="mail" value="<%= user.email %>">
            <label for="nacimiento">Fecha de Nacimiento</label>
            <input type="date" id="nacimiento" name="born" >
            <label for="domicilio">Domicilio</label>
            <input type="text" id="domicilio" placeholder="Domicilio (opcional)" name="address" value="<%= user.address %>">
            <label for="foto">Foto</label>
            <input type="hidden" name="oldImage" value="<%= user.image %> ">
            <input type="file" id="foto" name="registerImg" class="fotoFile" style="border: none; line-height: 20px; height: 35px;">
            <input type="password" id="pass" name="pass" placeholder="ContraseÃ±a" style="margin-top: 25px;">




            <div style="display: flex; margin: 12px auto;">
                <button type="submit" class="buy-now-button">Guardar</button>
                <a href="/user/admin" class="botonVolver" style="text-decoration: none; color: white;">Cancelar</a>
            </div>
        </form>
        
        <div class = "erroresFront">
            <ul>
                
            </ul>
        </div>

    </div>
    
</main>

