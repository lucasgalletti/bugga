<%- include('./partials/head', {title: 'Detalle: ' + productos.title}) %>


<%- include('./partials/headerNavbar') %>

<div class="products-wrapper">
  <div class="product-detail">
    <form action="/shop/adicionarAlCarrito" method="post" class="detalleProducto">
      <div style="display: flex; flex-direction:column; align-items: center;">
        <img src="/images/<%=productos.image%>" alt="product image" class="product-detail-img">
        <input type="button" class="botonCancelar" onclick="history.back()" name="volver atrás" value="volver" style="margin-top: 15px">
      </div>
      
      <div class="description">
        <h2 class="product-detail-description">Título: <%=productos.title%></h2>
        <input type="hidden" name="authorId" value="<%= productos.autores.id %>">
        <h3 class="product-detail-description">Autor: <%=productos.autores.name%></h3>
        <h5 class="product-detail-description">Sinopsis: <%=productos.description%></h5>
      <div class="qtyBuy">
          <div class="qty">
            <label for="cantidad">Cantidad</label>
            <input  class="form-control" type="number" id="cantidad" name="qty" value="1">
          </div> 
          <div>
            <input type="hidden" name="productId" value="<%= productos.id%>">
            <input type="hidden" name="price" value="<%= productos.price %> ">
            <button class="btn searchBotton" type="submit">Comprar</button>
          </div> 
      </div>
    </form>
  </div>
  <div class="product-detail-info">

    <p class="product-detail-price small">Precio:
      <span>$<%=toThousand(productos.price)%></span>
    </p>
    <ul class="actions-list">
      <li>
        <i class="fas fa-credit-card"></i>
        <p>Pagá en 12 cuotas sin interés</p>
      </li>
      <li>
        <i class="fas fa-store"></i>
        <p>Retiro grátis en nuestro local</p>
      </li>
    </ul>

  </div>

  
</div>

<%- include('./partials/footer') %>