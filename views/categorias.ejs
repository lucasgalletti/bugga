
<%- include('./partials/head', {title: 'ABM Categorías'}) %>


<%- include('./partials/headerNavbar') %>


<div class="addButton">
  <a href="/products/create">
    <img src="/images/addCategory.png" alt="addCategory" >
  </a>
</div>

<form class="d-flex buscarProducto" action="/categorys/search">
  <input class="form-control me-2" name="search" type="search" placeholder="Buscar categoría" aria-label="Search">
  <button class="btn btn-outline-success" type="submit">Buscar</button>
</form>

<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Categoría</th>
        <th scope="col" class="abmCentrado">Editar</th>
        <th scope="col" class="abmCentrado">Eliminar</th>
      </tr>
    </thead>
    <tbody class="abmTableRest">
        <% categorias.forEach((categoria) => { %>
      <tr>
        <td><%=categoria.name.toUpperCase()%></td>
        <td class="abmCentrado"><a href="/categorys/edit/<%=categoria.id%>"><i class="fas fa-edit"></i></a></td>
        <td class="abmCentrado"><a href="/categorys/delete/<%=categoria.id%>"><i class="fas fa-trash-alt" style="color: red;"></i></a></td>
      </tr>
      <% }) %> 
    </tbody>
  </table>

  <%- include('./partials/footer') %>