<%- include('./partials/head', {title: 'Detalle del Usuario: ' + user.name}) %>


<%- include('./partials/headerNavbar') %>

<div class="products-wrapper">
  <div class="product-detail">
    <div>
      <img src="/images/profileImg/<%=user.image%>" alt="product image" class="product-detail-img" style="width: 100px; border-radius: 50px">
      <h2 class="product-detail-description">Nombre: <%=user.name%></h2>
      <h3 class="product-detail-description">Email: <%=user.email%></h3>
      <p class="product-detail-description">Fecha de Nacimiento:</p> 
        <% if (user.born == '0000-00-00') { %>
          <p style="color: red;" class="product-detail-description">**Fecha no Registrada**</p> 
        <%}else{ %> 
        <p class="product-detail-description"><%=user.born%></p> 
        <% } %> 
        
      <p class="product-detail-description">Dirección:</p>
      <% if (user.address == '') { %>
        <p style="color: red;" class="product-detail-description">**Dirección no Registrada**</p> 
      <%}else{ %> 
      <p class="product-detail-description"><%=user.address%></p> 
      <% } %> 
      <input type="button" class="botonCancelar" onclick="history.back()" name="volver atrás" value="volver" style="margin-top: 15px; margin-bottom: 10px;">
    </div>
  </div>
</div>

<%- include('./partials/footer') %>