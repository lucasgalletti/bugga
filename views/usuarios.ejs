
<%- include('./partials/head', {title: 'ABM Usuarios'}) %>


<%- include('./partials/headerNavbar') %>

<div class="agregar"  style="margin-top: 150px; margin-left: 100px; ">
  <p style="color: rgb(75 177 91); font-size: 15px; max-width: 100px; text-align: center; border: solid 3px rgb(75 177 91); border-radius: 10px;">Agregar usuario</p>
    <a href="/user/create">
      
      <img src="/images/addUser.png" alt="" style="max-width: 50px; margin-left: 20px; margin-top: 5px;">
    </a>
      
</div>

<form class="d-flex buscarProducto" id=form action="/user/search" method="GET">
  <input class="form-control me-2" id=usuario name="search" type="search" placeholder="Buscar usuario" aria-label="Search">
  <button class="btn btn-outline-success" type="submit">Buscar</button>
</form>

<div class = "erroresFront">
  <ul>
      
  </ul>
</div>


<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Usuario</th>
        <th scope="col" class="abmCentrado">Ver</th>
        <th scope="col" class="abmCentrado">Editar</th>
        <th scope="col" class="abmCentrado">Eliminar</th>
      </tr>
    </thead>
    <tbody class="abmTable">
        <% usuarios.forEach((user) => { %>
      <tr>
        <td><%= user.id %> </td>
        <td><%=user.name.toUpperCase()%></td>
        <td class="abmCentrado"><a href="/user/<%=user.id%>"><i class="far fa-eye"></i></a></td>
        <td class="abmCentrado"><a href="/user/edit/<%=user.id%>"><i class="fas fa-edit"></i></a></td>
        <td class="abmCentrado"><a href="/user/delete/<%=user.id%>"><i class="fas fa-trash-alt" style="color: red; font-size: 15px;"></i></a></td>
      </tr>
      <% }) %> 
    </tbody>
  </table>

  <%- include('./partials/footer') %>

  <script src="/js/usuarios.js"> </script>