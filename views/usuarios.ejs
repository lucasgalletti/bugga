<%- include('./partials/headerNavbar') %>

<div class="addButton">
  <a href="/user/create">
    <img src="/images/addUser.png" alt="addUser" >
  </a>
</div>

<form class="d-flex buscarProducto" id=form action="/user/search" method="GET">
  <input class="form-control me-2" id=usuario name="search" type="search" placeholder="Buscar usuario" aria-label="Search">
  <button class="btn btn-outline-success" type="submit">Buscar</button>
</form>

<div class = "erroresFront">
  <ul>
      
  </ul>
</div>


<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Usuario</th>
        <th scope="col" class="abmCentrado">Ver</th>
        <th scope="col" class="abmCentrado">Editar</th>
        <th scope="col" class="abmCentrado">Eliminar</th>
      </tr>
    </thead>
    <tbody class="abmTableRest">
        <% usuarios.forEach((user) => { %>
      <tr>
        <td><%= user.id %> </td>
        <td><%=user.name.toUpperCase()%></td>
        <td class="abmCentrado"><a href="/user/<%=user.id%>"><i class="far fa-eye"></i></a></td>
        <td class="abmCentrado"><a href="/user/edit/<%=user.id%>"><i class="fas fa-edit"></i></a></td>
        <td class="abmCentrado"><a href="/user/delete/<%=user.id%>"><i class="fas fa-trash-alt" style="color: red;"></i></a></td>
      </tr>
      <% }) %> 
    </tbody>
  </table>
