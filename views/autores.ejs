
<%- include('./partials/head', {title: 'ABM Autores'}) %>


<%- include('./partials/headerNavbar') %>


<div class="addButton">
  <a href="/products/create">
    <img src="/images/addAuthor.png" alt="addAuthor" >
  </a>
</div>

<form class="d-flex buscarProducto" action="/authors/search" method="GET">
  <input class="form-control me-2" name="search" type="search" placeholder="Buscar autores" aria-label="Search">
  <button class="btn btn-outline-success" type="submit">Buscar</button>
</form>

<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col" class="abmCentrado">Editar</th>
        <th scope="col" class="abmCentrado">Eliminar</th>
      </tr>
    </thead>
    <tbody class="abmTableRest">
        <% autores.forEach((autor) => { %>
      <tr>
        <td><%=autor.name.toUpperCase()%></td>
        <td class="abmCentrado"><a href="/authors/edit/<%=autor.id%>"><i class="fas fa-edit"></i></a></td>
        <td class="abmCentrado"><a href="/authors/delete/<%=autor.id%>"><i class="fas fa-trash-alt" style="color: red;"></i></a></td>
      </tr>
      <% }) %> 
    </tbody>
  </table>

  <%- include('./partials/footer') %>